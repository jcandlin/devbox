#!/bin/sh
# chkconfig: 235 99 10
# description: Start or stop the servicemix <%= $name %> server
#
### BEGIN INIT INFO
# Provides: servicemix-<%= name %>
# Required-Start: $network $syslog
# Required-Stop: $network
# Default-Start: 2 3 5
# Default-Stop: 0 1 6
# Description: Start or stop the servicemix <%= $name %> server
### END INIT INFO

# Author: Linton Galloway <mail@linton.me>
#

case "$1" in
start)
	echo "Starting the servicemix <%= name %> server"
	su - servicemix -c "/opt/apache-servicemix/bin/admin start <%= name %>"
	;;
stop)
	echo "Stopping the servicemix <%= name %> server"
	su - servicemix -c "/opt/apache-servicemix/bin/admin stop <%= name %>"
	;;
restart)
	$0 stop ; $0 start
	RETVAL=$?
	;;
*)
	echo "Usage: $0 { start | stop | restart }"
	RETVAL=1
	;;
esac
exit $RETVAL

